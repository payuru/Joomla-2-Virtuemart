<?xml version="1.0" encoding="UTF-8" ?>
<extension version="2.5" type="plugin" group="vmpayment" method="upgrade">
    <name>VMPAYMENT_PAYU</name>
    <creationDate>AUGUST 2012</creationDate>
    <author>Stepanov Maksim, Mediaceh</author>
    <authorUrl>http://www.mediaceh.com</authorUrl>
    <copyright>Copyright (C) 2012 Stepanov Maksim, Mediaceh. All rights reserved.</copyright>
    <license>http://www.gnu.org/licenses/gpl-3.0.html GNU/GPL</license>
    <version>1.0.0</version>
    <description>PayU payment plugin</description>
    <languages>
		<language tag="ru-RU">ru-RU.plg_vmpayment_payu.ini</language>
		<language tag="en-GB">en-GB.plg_vmpayment_payu.ini</language>
    </languages>
    <files>
		<filename plugin="standard">payu.php</filename>
		<filename plugin="standard">payu_notify.php</filename>
    </files>

	<vmconfig>
        <fields name="params">
        	<fieldset name="basic" addfieldpath="/administrator/components/com_virtuemart/elements">
				<param type="vmjpluginwarning" />

				<field name="PAYU_MERCHANT" type="text" label="VMPAYMENT_PAYU_PAYU_MERCHANT" description="VMPAYMENT_PAYU_PAYU_MERCHANT_EXPLAIN" />

				<field name="PAYU_SECRET_KEY" type="text"  label="VMPAYMENT_PAYU_PAYU_SECRET_KEY" description="VMPAYMENT_PAYU_PAYU_SECRET_KEY_EXPLAIN" />
				
				<field name="PAYU_DEBUG" type="list" default="1" label="VMPAYMENT_PAYU_PAYU_DEBUG" description="VMPAYMENT_PAYU_PAYU_DEBUG_EXPLAIN">
					<option value="1">Включен</option>
					<option value="0">Выключен</option>
				</field>


				<field name="PAYU_COUNTRY" type="list" default="1" label="VMPAYMENT_PAYU_COUNTRY" description="VMPAYMENT_PAYU_COUNTRY_EXPLAIN">
					<option value="UA">Украина</option>
					<option value="RU">Россия</option>
				</field>

				<field name="PAYU_SYSTEM_CURRENCY" type="list" default="0" label="VMPAYMENT_PAYU_PAYU_SYSTEM_CURRENCY" description="VMPAYMENT_PAYU_PAYU_SYSTEM_CURRENCY_EXPLAIN">
					<option value="1">Да</option>
					<option value="0">Нет</option>
				</field>


				<field name="PAYU_BACK_REF" type="text"  label="VMPAYMENT_PAYU_PAYU_BACK_REF" description="VMPAYMENT_PAYU_PAYU_BACK_REF_EXPLAIN" />

				<field name="PAYU_VAT" type="text"  default="0" label="VMPAYMENT_PAYU_PAYU_VAT" description="VMPAYMENT_PAYU_PAYU_VAT_EXPLAIN" />
				
				<field name="PAYU_LANGUAGE" type="list" default="RU" label="VMPAYMENT_PAYU_PAYU_LANGUAGE" description="VMPAYMENT_PAYU_PAYU_LANGUAGE_EXPLAIN">
					<option value="RU">Русский</option>
					<option value="EN">Английский</option>
					<option value="TR">Турецкий</option>
					<option value="RO">Румынский</option>
					<option value="HU">Венгерский</option>
					<option value="DE">Немецкий</option>
					<option value="FR">Французский</option>
					<option value="IT">Итальянский</option>
					<option value="ES">Испанский</option>
				</field>
			</fieldset>
		
			<field name="status_pending" type="vmorderstate" scope="com_virtuemart" default="P" label="VMPAYMENT_PAYU_STATUS_PENDING" description="VMPAYMENT_PAYU_STATUS_PENDING_EXPLAIN" />
			<field name="status_success" type="vmorderstate" scope="com_virtuemart" default="P" label="VMPAYMENT_PAYU_STATUS_SUCCESS" description="VMPAYMENT_PAYU_STATUS_SUCCESS_EXPLAIN" />
		</fields>
	</vmconfig>
</extension>
